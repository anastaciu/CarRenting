@model CarRenting.Models.RegisterInitAdminViewModel
@{
    ViewBag.Title = "Registar Empresa";
}

<h2 style="margin-top: 50px; text-align: center">@ViewBag.Title</h2>

@using (Html.BeginForm("RegisterInitCompanyAdmin", "Account", FormMethod.Post, new { @class = "", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div style="background-color: aliceblue;margin-top: 25px;" class="full-width">
        <hr />
        <h4 style="text-align: center;">Dados da Empresa</h4>
        <hr />
    </div>

    <div class="form-row" style="margin-top: 25px">
        <div class="col-md-2"></div>
        <div class="col-md-8 jumbotron">
            <div class="offset-1 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(m => m.Company.CompanyName, new { @class = "col-form-label" })
                    <div>
                        @Html.TextBoxFor(m => m.Company.CompanyName, new { @class = "form-control " })
                    </div>
                </div>
            </div>


            <div class="offset-1 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(m => m.Company.Email, new { @class = "col-form-label" })
                    <div>
                        @Html.TextBoxFor(m => m.Company.Email, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="offset-1 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(m => m.Company.CompanyCellNumber, new { @class = "col-form-label" })
                    <div>
                        @Html.TextBoxFor(m => m.Company.CompanyCellNumber, new { @class = "form-control" })
                    </div>
                </div>
            </div>


            <div class="offset-1 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(m => m.Company.CompanyPhoneNumber, new { @class = "col-form-label" })
                    <div>
                        @Html.TextBoxFor(m => m.Company.CompanyPhoneNumber, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div style="background-color: aliceblue;" class="full-width">
        <hr />
        <h4 style="text-align: center;">Dados do Administrador</h4>
        <hr />
    </div>
    <div class="form-row" style="margin-top: 25px">
        <div class="col-md-2"></div>
        <div class="col-md-8 jumbotron">
            <div class="offset-1 col-md-10">
                @Html.LabelFor(m => m.Name, new { @class = "col-form-label" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="offset-1 col-md-10">
                @Html.LabelFor(m => m.Email, new { @class = "col-form-label" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>

            <div class="offset-1 col-md-10">
                @Html.LabelFor(m => m.Password, new { @class = "col-form-label" })
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="offset-1 col-md-10">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-form-label" })
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                <div class="offset-md-1 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Registar" />
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>


        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
