@model CarRenting.Models.RegisterInitAdminViewModel
@{
    ViewBag.Title = "Registar Empresa";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("RegisterInitCompanyAdmin", "Account", FormMethod.Post, new { @class = "", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <h4>Dados da Empresa</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(m => m.Company.CompanyName, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Company.CompanyName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Company.Email, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Company.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Company.CompanyCellNumber, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Company.CompanyCellNumber, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Company.CompanyPhoneNumber, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Company.CompanyPhoneNumber, new { @class = "form-control" })
        </div>
    </div>

    <hr />
    <h4>Dados do Administrador</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <div class="offset-md-1 col-md-10">
            <input type="submit" class="btn btn-primary" value="Registar" />
        </div>
    </div>


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}