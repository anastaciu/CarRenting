@model CarRenting.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Recuperação de palavra-passe";
}

<div class="container">
    <div class="log-headers-h2 boxshadow offset-2 col-8">
        <h2>@ViewBag.Title</h2>
    </div>

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Code)

        <div class="jumbotron boxshadow offset-2 col-8">
            <div class="bg-warning text-center offset-md-1 col-md-10">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
            <div class="form-group offset-1 col-md-10">
                @Html.LabelFor(m => m.Email, new {@class = "col-form-label"})
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})

            </div>
            <div class="form-group offset-1 col-md-10">
                @Html.LabelFor(m => m.Password, new {@class = "col-form-label"})
                @Html.PasswordFor(m => m.Password, new {@class = "form-control"})

            </div>
            <div class="form-group offset-1 col-md-10">
                @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-form-label"})
                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})

            </div>
            <div class="form-group text-center">
                @Html.ActionLink("Cancelar", "Index", "Home", null, new {@class = "btn-danger btn"})
                <input type="submit" class="btn btn-primary" value="Confirmar"/>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
