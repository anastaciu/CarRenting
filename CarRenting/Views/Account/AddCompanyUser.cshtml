@using System.Web.Mvc.Html
@model CarRenting.Models.AddCompanyUserViewModel

@{
    ViewBag.Title = "Adicionar Utilizador";
}
<div class="log-headers boxshadow">
    <h4>@ViewBag.Title</h4>
</div>

@using (Html.BeginForm("AddCompanyUser", "Account", FormMethod.Post, new { @class = "", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-row">
        <div class="col-md-2"></div>
        <div class="col-md-8 jumbotron boxshadow">
            <div class="offset-1 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-form-label" })
                    <div>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div> 
            </div>


            <div class="offset-1 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-form-label" })
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="offset-1 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-form-label" })
                    <div>
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                    </div>
                </div>
            </div>


            <div class="offset-1 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-form-label" })
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="offset-1 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-form-label" })
                    <div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="offset-1 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(m => m.RoleName, new { @class = "col-form-label" })
                    <div>
                        @Html.DropDownListFor(m=>m.RoleName, new SelectList(ViewBag.Roles, "Value", "Text"), new{@class = "form-control"})
                    </div>
                </div>
            </div>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <br/>
            <div class="row">
                <div class="col-sm-12 text-center">
                    @Html.ActionLink("Cancelar", "Index", "CompanyAdminArea", new {@area = ""}, new {@class = "btn btn-danger"})
                    <button type="submit" class="btn btn-primary" Style="width: 100px;">Registar</button>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>

    </div>


}
