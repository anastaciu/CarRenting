@model CarRenting.Models.RegisterViewModel
@{
    ViewBag.Title = "Registar Utilizador";
}
<div style="margin-top: 10vh" class="w-auto log-headers">
    <h4>@ViewBag.Title</h4>
</div>

@using (Html.BeginForm("RegisterUser", "Account", FormMethod.Post, new { @class = "", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-row">
        <div class="col-md-2"></div>
        <div class="col-md-8 jumbotron">
            <div class="offset-1 col-md-10">
                @Html.LabelFor(m => m.Name, new { @class = "col-form-label" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Name, new { @placeholder = "Nome Completo", @class = "form-control" })
                </div>
            </div>
            <div class="offset-1 col-md-10">
                @Html.LabelFor(m => m.Email, new { @class = "col-form-label" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "email@email.com", @class = "form-control" })
                </div>
            </div>
            <div class="offset-1 col-md-10">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-form-label" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @placeholder = "239123456/912345678", @class = "form-control", @type = "tel" })
                </div>
            </div>
            <div class="offset-1 col-md-10">
                @Html.LabelFor(m => m.Password, new { @class = "col-form-label" })
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="offset-1 col-md-10">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-form-label" })
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <br/>
            <div class="text-center">
                @Html.ActionLink("Já tenho uma conta", "Login", null, new { @class = "text-white" })
            </div>

            <br />
                <div class="row">
                    <div class="col-sm-12 text-center">
                        @Html.ActionLink("Cancelar", "Index", "Home", null, new {@class = "btn btn-danger"})
                        <button type="submit" class="btn btn-primary" Style="width: 100px;">Registar</button>
                    </div>
                </div>
            
        </div>
        <div class="col-md-2"></div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}