@model IEnumerable<CarRenting.Models.Company>

@{
    ViewBag.Title = "Empresas";
}

@if (TempData["companyEdited"] as bool? == true)
{
    <script type="text/javascript">
        $(document).ready(function () {
            toastr.success('Alterações guardadas');
        });
    </script>
}

<div class="log-headers-h2 boxshadow">
    <h2>@ViewBag.Title</h2>
</div>

<table class="table boxshadow">
    <tr>
        <th>
            Catálogo
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyPhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyCellNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Catalog", "Cars", new {id = item.Id})" title="Catálogo de Veículos"><i class="fas text-center fa-fw fa-clipboard-list text-primary"></i></a>

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyCellNumber)
            </td>
            <td>
                <a href="@Url.Action("Edit", new {id = item.Id})" title="Editar Dados da Empresa"><i class="fas text-center fa-fw fa-edit text-primary"></i></a>
                <a href="@Url.Action("Details", new {id = item.Id})" title="Detalhes da Empresa"><i class="fas fa-fw fa-info text-info"></i></a>
                <a href="@Url.Action("Delete", new {id = item.Id})" title="Apagar Empresa"><i class="fas fa-fw fa-trash-alt text-danger"></i></a>
            </td>
        </tr>
    }

</table>

<div class="text-center">
    @Html.ActionLink("Voltar", "Index", "AdminArea", null, new { @class = "btn btn-danger" })
</div>
