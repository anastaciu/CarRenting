@model CarRenting.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Alterar password";
}
<div class="container">
    <div class="boxshadow log-headers-h2 col-md-8 offset-md-2">
        <h2>@ViewBag.Title.</h2>
    </div>
    <div class="jumbotron boxshadow col-md-8 offset-md-2">

        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group col-md-10 offset-1">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-form-label" })
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-10 offset-1">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-form-label" })
                
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
              
            </div>
            <div class="form-group col-md-10 offset-1">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-form-label" })
               
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            
            </div>
            <div class="text-center">
                @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-danger" })
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}