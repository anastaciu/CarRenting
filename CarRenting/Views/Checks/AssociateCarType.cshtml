@model CarRenting.Models.AssociateViewModel

@{
    ViewBag.Title = "Associar Verificação a Categorias";
}
<div class=" log-headers-h2 boxshadow col-md-8 offset-md-2">
    <h2>@ViewBag.Title</h2>
</div>

<div class="log-headers boxshadow col-md-8 offset-md-2">
    <h4>@Model.Description</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="jumbotron boxshadow col-md-8 offset-md-2">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)



        @for (int i = 0; i < Model.CarTypes.Count; i++)
        {
            <div class="form-group col-md-10 offset-1">
                @Html.EditorFor(model => model.CarTypes[i].Add)
                @Html.DisplayFor(model => model.CarTypes[i].Type)
                @Html.HiddenFor(model => model.CarTypes[i].Id)


            </div>
        }
        <br />
        <div class="form-group text-center">
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn-danger btn" })
            <input type="submit" value="Guardar" class="btn btn-primary" />

        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
