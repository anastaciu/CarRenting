@model CarRenting.Models.Check

@{
    ViewBag.Title = "Adicionar Verificação";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h2 class="log-headers-h2 boxshadow offset-md-2 col-md-8">@ViewBag.Title</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="jumbotron boxshadow offset-md-2 col-md-8">
        <div class="form-group offset-1 col-md-10">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-form-label" })
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    

            <div class="form-group">
                <div class="col-sm-12 text-center">
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-danger" })
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>

}


