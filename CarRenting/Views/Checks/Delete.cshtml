@model CarRenting.Models.Check

@{
    ViewBag.Title = "Eliminar Verificação";
}

<div>
    <div class="boxshadow log-headers-h2 col-md-8 offset-md-2">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="text-center log-headers boxshadow col-md-8 offset-md-2">
        <h2>Quer mesmo eliminar esta verificação?</h2>
    </div>

    <div class="jumbotron boxshadow col-md-8 offset-md-2">
        <dl class="dl-horizontal col-md-10 offset-md-1">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="text-center">
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn-primary btn" })
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </div>
        }
    </div>
</div>