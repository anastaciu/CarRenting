
@{
    ViewBag.Title = "Error";
}
<div class="text-center jumbotron boxshadow" style="margin-top: 15vh">
    <h3 class="text-danger">Erro</h3>
    @if (Model != null)
    {
        <p>@ViewBag.Message</p>
    }
    <h4 class="text-danger">Não foi possível aceder ao recurso pretendido</h4>
    @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-primary" })
</div>