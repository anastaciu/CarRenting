        <a href="@Url.Action("Index", "Rents")" style="text-decoration: none">
            <div class="card-body text-center text-dark">
                <div class="mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="d-flex">
                        <i class="fas fa-key m-auto" style="font-size: 10vw"></i>
                    </div>
