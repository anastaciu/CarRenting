        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

            string user = null;
            if (User.Identity.IsAuthenticated)
            {
                user = HttpContext.Current.GetOwinContext()?.GetUserManager<ApplicationUserManager>()?.FindById(User.Identity.GetUserId())?.Name;
            }

        <div class="row">
            <div class="col-sm-12 text-center">
                @if (Request.IsAuthenticated && user != null)
                {
                    if (User.IsInRole(WebConfigurationManager.AppSettings["Cn"]))
                    {
                        @Html.ActionLink("Cancelar", "GetCompanyEmployees", "ApplicationUsers", new {@area = ""}, new {@class = "btn btn-danger"});
                    }
                    else if(User.IsInRole(WebConfigurationManager.AppSettings["An"]))
                    {
                        @Html.ActionLink("Cancelar", "Index", "ApplicationUsers", new {@area = ""}, new {@class = "btn btn-danger"});
                    }
                    else
                    {
                         Response.Redirect(@Url.Action("Index", "Home") ?? string.Empty);
                    }
                }
                <button type="submit" class="btn btn-primary" Style="width: 100px;">Eliminar</button>
            </div>
        </div>
    }
</div>
