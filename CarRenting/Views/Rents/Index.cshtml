@model IEnumerable<CarRenting.Models.Rent>

@{
    ViewBag.Title = "Lista de Alugueres da Empresa";
}


@if (ViewBag.IsConfirmed)
{
    <script type="text/javascript">
        $(document).ready(function () {
            toastr.success('Aluguer Confirmado', 'Operação realizada');
        });
    </script>
}
<div class="container">
    <div class="log-headers-h2 boxshadow">
        <h2>@ViewBag.Title</h2>
    </div>

    <table class="table boxshadow">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.License)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Begin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.License)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Begin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    @if (!item.IsConfirmed)
                    {
                        <a href="@Url.Action("ConfirmRent", "Rents", new { id = item.Id })" class="btn btn-success" style="padding: 1px 5px" title="Confirmar Reserva"><i class="fas fa-fw fa-sm fa-check-circle"></i></a>

                    }
                    <a href="@Url.Action("Edit", "Rents", new { id = item.Id })" class="btn btn-primary" style="padding: 1px 5px" title="Editar Reserva"><i class="fas text-center fa-fw fa-sm fa-edit"></i></a>
                    <a href="@Url.Action("Details", "Rents", new { id = item.Id })" class="btn btn-info" style="padding: 1px 5px" title="Detalhes da Reserva"><i class="fas fa-sm fa-fw fa-info-circle "></i></a>
                    <a href="@Url.Action("Delete", "Rents", new { id = item.Id })" class="btn btn-danger" style="padding: 1px 5px" title="Apagar Reserva"><i class="fas fa-fw fa-sm fa-trash-alt "></i></a>
                </td>
            </tr>
        }

    </table>
</div>
