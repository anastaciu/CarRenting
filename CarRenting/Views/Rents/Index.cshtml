@model IEnumerable<CarRenting.Models.Rent>

@{
    ViewBag.Title = "Lista de Alugueres da Empresa";
}

@if (ViewBag.IsConfirmed)
{
    <script type="text/javascript">
        $(document).ready(function () {
            toastr.success('Aluguer Confirmado', 'Operação realizada');
        });
    </script>
}
<div class="container">
    <div class="log-headers-h2 boxshadow">
        <h2>@ViewBag.Title</h2>
    </div>

    <table class="table boxshadow">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.License)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Begin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.License)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Begin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    @if (!item.IsConfirmed)
                    {
                        @Html.ActionLink("Confirmar", "ConfirmRent", new { id = item.Id }, new { @class = "btn btn-success", @style = "padding:2px" })
                    }
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary", @style = "padding:2px" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary", @style = "padding:2px" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", @style = "padding:2px" })
                </td>
            </tr>
        }

    </table>
</div>
